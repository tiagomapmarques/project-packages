{
  "compilerOptions": {
    "target": "es5",
    "lib": ["ES6"],
    "outDir": "./lib",
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ]
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "src/*.spec.ts"
  ]
}
